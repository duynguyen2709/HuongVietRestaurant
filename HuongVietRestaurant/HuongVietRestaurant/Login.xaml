<Window x:Class="HuongVietRestaurant.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuongVietRestaurant"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400">
    <Grid>
        <Label x:Name="label" Content="Login" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  VerticalAlignment="Top" Height="48" Width="122" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,64,0,0"/>
        <Label x:Name="label1" Content="Tên đăng nhập:" HorizontalAlignment="Left" Margin="38,133,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="31" Margin="42,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="321"/>
        <Label x:Name="label1_Copy" Content="Mật khẩu:" HorizontalAlignment="Left" Margin="38,213,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Width="321" Height="31" HorizontalAlignment="Left" Margin="42,245,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Center" Margin="0,314,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
