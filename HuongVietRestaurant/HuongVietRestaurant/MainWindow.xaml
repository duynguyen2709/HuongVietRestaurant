<Window x:Class="HuongVietRestaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuongVietRestaurant"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="HuongVietRestaurant" Height="450" Width="800">
    <Grid>
        <TabControl Margin="0,0,9.6,0">
            <TabItem Header="Food">
                <StackPanel Orientation="Horizontal">
                    <DataGrid x:Name="dataGrid" Width="500"/>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnGiamSoLuongMonAnUnrepeatableRead" VerticalAlignment="Top" Width="135" Height="35" Margin="2,0,2,0">
                                <TextBlock TextWrapping="Wrap">GiamSoLuongMonAn
                            UnrepeatableRead</TextBlock>
                            </Button>
                            <Button x:Name="btnCapNhatSoLuongMonAn" VerticalAlignment="Top" Width="135" Height="35" Margin="5,0,0,0">
                                <TextBlock TextWrapping="Wrap" Width="135">CapNhatSoLuongMonAn</TextBlock>
                            </Button>
                        </StackPanel>
                        <Button x:Name="btnCapNhapMonAn_Deadlock" VerticalAlignment="Top" Width="150" Height="35" Margin="0,20,0,0">
                            <TextBlock TextWrapping="Wrap">CapNhapMonAn_Deadlock</TextBlock>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Basket">
                <DataGrid x:Name="dataGrid1" Margin="-5,0,0.4,0.2"/>
            </TabItem>
            <TabItem Header="Voucher">
                <DataGrid x:Name="dataGrid2" Margin="-5,0,0.4,0.2"/>
            </TabItem>
            <TabItem Header="Member">
                <DataGrid x:Name="dataGrid_Member" Margin="-5,0,0.4,0.2"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
